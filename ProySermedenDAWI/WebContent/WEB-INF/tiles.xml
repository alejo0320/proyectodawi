<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">

<tiles-definitions>

	<!-- Definimos la plantilla principal de la aplicacion -->
	<definition name="d_bienvenida" template="/plantillas/principal.jsp">
		<put-attribute name="cabecera" value="/paginas/cabecera.jsp"/>
		<put-attribute name="menu" value="/paginas/menu.jsp"/>
		<put-attribute name="cuerpo" value="/paginas/bienvenida.jsp"/>
		<put-attribute name="pie" value="/paginas/pie.jsp"></put-attribute>	
	</definition>
	
	<!-- Realizamos la definicion de la pagina de listado -->
	<definition name="d_listado" extends="d_bienvenida">	
		<put-attribute name="cuerpo" value="/paginas/listado.jsp"/>	
	</definition>
	
	<!-- Realizamos la definicion de la pagina de nuevo Cliente -->
	<definition name="d_nuevoCliente" extends="d_bienvenida">	
		<put-attribute name="cuerpo" value="/paginas/nuevoCliente.jsp"/>	
	</definition>
	
	<!-- Realizamos la definicion de la pagina de modificar -->
	<definition name="d_modificarCliente" extends="d_bienvenida">	
		<put-attribute name="cuerpo" value="/paginas/modificaCliente.jsp"/>	
	</definition>


</tiles-definitions>